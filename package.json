{
    "name": "tools",
    "scripts": {
      "serve": "npm-run-all -s display-env build-env serve:run",
      "serve:run": "cross-var ng serve --proxy-config ../proxies/$npm_package_config_env.conf.json --env=$npm_package_config_env --live-reload false",
      "serve:aot": "npm-run-all -s display-env build-env serve:run-aot",
      "serve:run-aot": "cross-var ng serve --proxy-config ../proxies/$npm_package_config_env.conf.json --env=$npm_package_config_env --live-reload false --aot",
      "serve:secure": "npm-run-all -s display-env build-env serve:secure:run",
      "serve:secure:run": "cross-var ng serve --proxy-config ../proxies/$npm_package_config_env.conf.json --env=$npm_package_config_env --live-reload false --ssl 1 --ssl-key './ssl/localhost.key' --ssl-cert './ssl/localhost.crt'",
      "build": "npm-run-all -s display-env build-env build:run",
      "build:run": "cross-var ng build --env=$npm_package_config_env --aot",
      "package:platform": "npm-run-all -s build package:zip-platform",
      "package:app": "npm-run-all -s build package:zip-app",

      "serve6": "npm-run-all -s display-env build-env serve6:run",
      "serve6:run": "cross-var ng serve --proxy-config ../proxies/$npm_package_config_env.conf.json --configuration=$npm_package_config_env --live-reload false",
      "serve6:aot": "npm-run-all -s display-env build-env serve6:run-aot",
      "serve6:run-aot": "cross-var ng serve --proxy-config ../proxies/$npm_package_config_env.conf.json --configuration=$npm_package_config_env --live-reload false --aot",
      "serve6:secure": "npm-run-all -s display-env build-env serve6:secure:run",
      "serve6:secure:run": "cross-var ng serve --proxy-config ../proxies/$npm_package_config_env.conf.json --configuration=$npm_package_config_env --live-reload false --ssl 1 --ssl-key './ssl/localhost.key' --ssl-cert './ssl/localhost.crt'",
      "build6": "npm-run-all -s display-env build-env build6:run",
      "build6:run": "cross-var ng build --configuration=$npm_package_config_env --aot",
      "package6:platform": "npm-run-all -s build6 package:zip-platform",
      "package6:app": "npm-run-all -s build6 package:zip-app",

      "display-env": "cross-var echo Build Environment: $npm_package_config_env",
      "build-env": "node ./scripts/build-env.js",
      "package:zip-platform": "cd ../../ && bestzip package-platform.zip ./frontend/dist ./backend ./framework ./maintenance",
      "package:zip-app": "cd ../dist && bestzip ../../package-app.zip ./*"
    }
  }
