{
    "name": "tools",
    "scripts": {
      "serve": "npm-run-all -s display-env build-env serve:run",
      "serve:run": "npm-cross-var ng serve --proxy-config ../proxies/$npm_package_config_env.conf.json --env=$npm_package_config_env --live-reload=$npm_package_config_livereload",
      "serve:aot": "npm-run-all -s display-env build-env serve:run-aot",
      "serve:run-aot": "npm-cross-var ng serve --proxy-config ../proxies/$npm_package_config_env.conf.json --env=$npm_package_config_env --live-reload=$npm_package_config_livereload --aot",
      "serve:secure": "npm-run-all -s display-env build-env serve:secure:run",
      "serve:secure:run": "npm-cross-var ng serve --proxy-config ../proxies/$npm_package_config_env.conf.json --env=$npm_package_config_env --live-reload=$npm_package_config_livereload --ssl 1 --ssl-key './ssl/localhost.key' --ssl-cert './ssl/localhost.crt'",
      "build": "npm-run-all -s display-env build-env build:run",
      "build:run": "npm-cross-var ng build --env=$npm_package_config_env --aot",
      "build-prod": "npm-run-all -s display-env build-env build-prod:run",
      "build-prod:run": "npm-cross-var ng build --env=$npm_package_config_env --aot --prod --build-optimizer --sourcemaps=false --vendor-chunk=true",
      "package:platform": "npm-run-all -s build-prod package:zip-platform",
      "package:app": "npm-run-all -s build-prod package:zip-app",

      "serve6": "npm-run-all -s display-env build-env serve6:run",
      "serve6:run": "npm-cross-var ng serve --proxy-config ../proxies/$npm_package_config_env.conf.json --configuration=$npm_package_config_env --live-reload=$npm_package_config_livereload",
      "serve6:aot": "npm-run-all -s display-env build-env serve6:run-aot",
      "serve6:run-aot": "npm-cross-var ng serve --proxy-config ../proxies/$npm_package_config_env.conf.json --configuration=$npm_package_config_env --live-reload=$npm_package_config_livereload --aot",
      "serve6:secure": "npm-run-all -s display-env build-env serve6:secure:run",
      "serve6:secure:run": "npm-cross-var ng serve --proxy-config ../proxies/$npm_package_config_env.conf.json --configuration=$npm_package_config_env --live-reload=$npm_package_config_livereload --ssl 1 --ssl-key './ssl/localhost.key' --ssl-cert './ssl/localhost.crt'",
      "build6": "npm-run-all -s display-env build-env build6:run",
      "build6:run": "npm-cross-var ng build --configuration=$npm_package_config_env --aot",
      "build6-prod": "npm-run-all -s display-env build-env build6-prod:run",
      "build6-prod:run": "npm-cross-var ng build --configuration=$npm_package_config_env --aot --prod --build-optimizer --source-map=false --vendor-chunk=true",
      "package6:platform": "npm-run-all -s build6-prod package:zip-platform",
      "package6:app": "npm-run-all -s build6-prod package:zip-app",

      "display-env": "npm-cross-var echo Environment: $npm_package_config_env, Device: $npm_package_config_device, Live Reload: $npm_package_config_livereload",
      "build-env": "node ./scripts/build-env.js",
      "package:zip-platform": "cd ../../ && bestzip package-platform.zip ./frontend/dist ./backend ./framework ./maintenance",
      "package:zip-app": "cd ../dist && bestzip ../../package-app.zip ./*"
    },
    "config": {
      "env": "local",
      "livereload": "'false'",
      "device": "desktop"
    }
  }
