{
    "name": "tools",
    "scripts": {

      "serve": "cross-var ng serve --proxy-config ../proxies/$npm_package_config_env.conf.json --environment=$npm_package_config_env --live-reload false",
      "serve:aot": "cross-var ng serve --proxy-config ../proxies/$npm_package_config_env.conf.json --environment=$npm_package_config_env --live-reload false --aot",
      "serve:secure": "cross-var ng serve --proxy-config ../proxies/$npm_package_config_env.conf.json --environment=$npm_package_config_env --live-reload false --ssl 1 --ssl-key './ssl/localhost.key' --ssl-cert './ssl/localhost.crt'",
      "build": "cross-var ng build --env=$npm_package_config_env",
      "display-env": "cross-var echo Building Environment: $npm_package_config_env",
      "build:dev": "build --env=tools:dev",
      "zip:dev": "npm-run-all -s build:dev dist:zip",
      "package": "npm-run-all -s display-env build",
      "package:zip": "cd ../dist && bestzip ../../dist.zip ./*",
      "dist:zip": "cd ../dist && bestzip ../../dist.zip ./*"
    },
    "config": {
      "env": "local"
    }
  }
