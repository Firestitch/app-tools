{
    "name": "tools",
    "scripts": {
      "serve": "npm run env & npm run serve:run",
      "serve:run": "npm-cross-var ng serve --live-reload=$npm_config_livereload --proxy-config proxies/$npm_config_env.conf.json --configuration=$npm_config_env",

      "serve:aot": "npm run env & npm run serve:run-aot",
      "serve:run-aot": "npm-cross-var ng serve --live-reload=false --proxy-config proxies/$npm_config_env.conf.json --configuration=$npm_config_env --aot",

      "serve:secure": "npm run env & npm run serve:secure:run",
      "serve:secure:run": "npm-cross-var ng serve --live-reload=false --proxy-config proxies/$npm_config_env.conf.json --configuration=$npm_config_env --ssl --ssl-key './ssl/localhost.key' --ssl-cert './ssl/localhost.crt'",

      "build": "npm-run-all -s env build:run",
      "build:run": "npm-cross-var ng build --no-progress --configuration=$npm_config_env --aot --output-path=dist",

      "build-prod": "npm-run-all -s env build-prod:run",
      "build-prod:run": "npm-cross-var ng build --no-progress --configuration=$npm_config_env --aot --prod --build-optimizer --source-map=false --vendor-chunk=true --output-path=dist",

      "package": "npm-run-all -s build-prod package:zip",
      "package:mobile": "npm-run-all -s build-prod --tools:outputpath=tmp/zip package:zip-app",

      "env": "npm run env:display && npm run env:build",
      "env:display": "npm-cross-var echo Environment: $npm_config_env, Device: $npm_config_device, Live Reload: $npm_config_livereload",
      "env:build": "npm-cross-var node ./scripts/build-env.js",
      "package:zip": "cd ../../ && bestzip package.zip ./frontend/dist ./backend ./framework ./maintenance",
      "package:zip-app": "cd ../tmp/zip && bestzip ../../package-app.zip ./*"
    }
  }
